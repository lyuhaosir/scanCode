/* pages/cart/cart.wxss */
.cart {
  height: 100vh;
  position: relative;
}

/* 没有商品 */
.goods_none {
  padding-top: 160rpx;
  box-sizing: border-box;
  background: rgb(241, 241, 241);
  height: 87.5vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods_none .none_name {
  font-size: 40rpx;
  color: #949494;
}

.goods_none image {
  width: 40%;
  margin: 40rpx;
}

.goods_none button{
  width: 500rpx;
  background-color: #FFA72A;
  font-weight: bold;
}
/* 商品内容 */
.goods_content {
  background: rgb(241, 241, 241);
  height: 87.5vh;
  overflow: hidden;
  overflow-y: auto;
}

.goods_content .goods_item {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  font-size: 32rpx;
  height: 200rpx;
  border-bottom: 2rpx solid rgb(223, 223, 223);
}

.goods_content .goods_item .item_title {
  display: inline-block;
  height: 56rpx;
  line-height: 56rpx;
}

.goods_content .goods_item .item_description {
  color: rgb(179, 179, 179);
  font-size: 28rpx;
}

.goods_content .goods_item .item_price {
  color: red;
  font-size: 28rpx;
}

.goods_content .goods_item .Num {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  display: flex;
}

/* 减号按钮 */
.goods_content .goods_item .Num .minus {
  width: 60rpx !important;
  height: 60rpx !important;
  border: 2rpx solid rgb(223, 165, 5);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(223, 165, 5);
}

/* 输入框 */
.goods_content .goods_item .Num input {
  text-align: center;
  width: 120rpx;
  height: 56rpx;
  margin: 0 10rpx;
  border-radius: 30rpx;
  border: 2rpx solid rgb(223, 165, 5);
}

/* 加号按钮 */
.goods_content .goods_item .Num .add {
  width: 60rpx !important;
  height: 60rpx !important;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 50%;
  background: rgb(223, 165, 5);
}

/* 底部 */
.foot {
  position: absolute;
  right: 0;
  left: 0;
  bottom: 0;
}

.foot .goods_price {
  padding: 16rpx;
  font-size: 28rpx;
  color: rgb(141, 141, 141);
}

.foot .goods_price text {
  color: #ff2124;
}

.foot .goods_intend {
  display: flex;
}

.foot .goods_intend .add,
.foot .goods_intend .pay {
  text-align: center;
  color: white;
  padding: 20rpx 0;
}

.foot .goods_intend .add {
  width: 50%;
  background: rgb(223, 165, 5);
}

.foot .goods_intend .pay {
  width: 50%;
  background: #ff2124;
}